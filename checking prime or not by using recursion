#include <stdio.h>
int primenum(int ,int );
void main()
{
    int num,prime;
    printf("enter any number= ");
    scanf("%d",&num);
    prime=primenum(num,num/2);
    if(prime==1)
    {
        printf("%d is a prime number",num);
    }
    else
    {
        printf("%d is a composite number",num);
    }
}
 int primenum(int n,int i)
 {
 if(i==1)
{
 return 1;
}
else
 {
     if (n%i==0)
     return 0;
 }
 }
